<h1>{{ 'customer.entry.log_in' | t }}</h1>

{% form 'customer_login' %} {% if form.errors %} {% capture error_text %}
{{ form.errors | default_errors }}
{% endcapture%} {% render 'layout-message', type: 'error' text: error_text class: 'mb-8' %} {% endif %}

<div class="mb-4 sm:mb-6">
	<label for="CustomerEmail" class="block">
		{{ 'form.email' | t }}
	</label>

	<input type="email" id="CustomerEmail" name="customer[email]" class="w-full" required />
</div>

{% if form.password_needed %}
<div class="mb-4 sm:mb-10">
	<label for="CustomerPassword" class="block">
		{{ 'form.password' | t }}
	</label>

	<input type="password" id="CustomerPassword" name="customer[password]" class="w-full" required />
</div>
{% endif %}

<div class="flex flex-col items-center justify-center gap-4 sm:gap-6">
	<button type="submit" class="button button-primary">
		{{ 'action.sign_in' | t }}
	</button>

	<a href="{{ routes.root_url }}account/register" class="font-neue uppercase underline">
		{{ 'action.create_account' | t }}
	</a>
</div>

{% if form.password_needed %}
<button class="text-gray-600 w-full font-neue uppercase text-xs mt-8" @click.prevent="show('forgot-password')">
	{{ 'action.forgot_your_password' | t }}
</button>
{% endif %} {% endform %}
